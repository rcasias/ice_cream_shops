<div class="top_nav_bar_wrapper">
  <a href="/ice_cream_shops" class="top_links_nav_links margin_left_display">Ice Cream Shop Index</a>
  <a href="/flavors" class="top_links_nav_links">Flavors Index</a>
</div>

<div class="format_indent">
  <h1 class="title"><%= @shop.name %></h1>

  <h5>Number of flavors for this shop: <%= @flavors.total_number_of_flavors %></h5>

  <p><%= @shop.address %></p>
  <p><%= @shop.phone_number %></p>
  <p>Hours of Operation: <%= @shop.hours_of_operation %></p>
  <p>Delivery offered? <%= @shop.delivery? %></p>
  <p><%= @shop.rating %> STARS</p>
  <p><%= @shop.created_at %></p>
  <p><%= @shop.updated_at %></p>

  <button type="button" name="button">
    <a href="/ice_cream_shops/<%= @shop.id %>/flavors">Ice Cream Flavors Offered</a>
  </button><br/>

  <button type="button" name="button">
    <a href="/ice_cream_shops/<%= @shop.id %>/edit">Edit Shop</a>
  </button>

  <form action="/ice_cream_shops/<%= @shop.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Shop"/>
  </form>
</div>
