  <h2 class="title">Add a New Shop:</h2>
  <%=form_with url: '/ice_cream_shops', method: :post, local: true do |form| %>
    <%= form.label :name %><br/>
    <%= form.text_field :name %><br/>
    <%= form.label :address %><br/>
    <%= form.text_field :address %><br/>
    <%= form.label :phone_number %><br/>
    <%= form.text_field :phone_number %><br/>
    <%= form.label :hours_of_operation %><br/>
    <%= form.text_field :hours_of_operation %><br/>
    <%= form.label "Has Delivery?" %><br/>
    <%= form.radio_button :has_delivery, 'true' %> Yes<br /><br/>
    <%= form.radio_button :has_delivery, 'false' %> No<br /><br/>
    <%= form.label :rating %><br/>
    <%= form.text_field :rating %><br/>
