<div class="top_nav_bar_wrapper">
  <a href="/ice_cream_shops" class="top_links_nav_links margin_left_display">Ice Cream Shop Index</a>
  <a href="flavors" class="top_links_nav_links">Flavors Index</a>
</div>

<div class="format_indent">


  <h2 class="title">Edit Shop:</h2>
  <%=form_with url: "/ice_cream_shops/#{@shop.id}", method: :patch, local: true do |form| %>
    <%= form.label :name %><br/>
    <%= form.text_field :name, value: "#{@shop.name}" %><br/>
    <%= form.label :address %><br/>
    <%= form.text_field :address, value: "#{@shop.address}" %><br/>
    <%= form.label :phone_number %><br/>
    <%= form.text_field :phone_number, value: "#{@shop.phone_number}" %><br/>
    <%= form.label :hours_of_operation %><br/>
    <%= form.text_field :hours_of_operation, value: "#{@shop.hours_of_operation}" %><br/>
    <%= form.label "Has Delivery?" %><br/>
    <%= form.radio_button :has_delivery, 'true' %> Yes<br /><br/>
    <%= form.radio_button :has_delivery, 'false' %> No<br /><br/>
    <%= form.label :rating %><br/>
    <%= form.text_field :rating, value: "#{@shop.rating}" %><br/>
    <%= form.submit "Submit"%>
  <% end %>

</div>
