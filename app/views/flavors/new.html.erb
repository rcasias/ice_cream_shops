
<div class="top_nav_bar_wrapper">
  <a href="/ice_cream_shops" class="top_links_nav_links margin_left_display">Ice Cream Shop Index</a>
  <a href="/flavors" class="top_links_nav_links">Flavors Index</a>
</div>

<div class="format_indent">
  <form action='/flavors' method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <h2 class="title">Add a new flavor:</h2>
    <p>Flavor Name:</p>
    <input type='text' name='flavor[flavor_name]'/><br/>

    <p>Has Dairy?</p>
    <input type="radio" id="yes" name="flavor[dairy_free]" value="true">
    <label for="yes">Yes</label><br>
    <input type="radio" id="no" name="flavor[dairy_free]" value="false">
    <label for="no">No</label><br>

    <p>Has Nuts?</p>
    <input type="radio" id="yes" name="flavor[nut_free]" value="true">
    <label for="yes">Yes</label><br>
    <input type="radio" id="no" name="flavor[nut_free]" value="false">
    <label for="no">No</label><br>

    <p>Calories Per Scoop:</p>
    <textarea name="flavor[calories_per_scoop]"></textarea><br/>
    <p>Price Per Scoop:</p>
    <textarea name="flavor[price_per_scoop]"></textarea><br/>
    <p>Shop Id:</p>
    <textarea name="flavor[shop_id]"></textarea><br/>
    <input type='Submit'/>
  </form>
</div>
