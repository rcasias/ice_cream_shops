<div class="ice_cream_background_image" >
  <div class="top_nav_bar_wrapper">
    <a href="/ice_cream_shops" class="top_links_nav_links margin_left_display">Ice Cream Shop Index</a>
    <a href="/flavors/new" class="top_links_nav_links">Add a New Flavor</a>
  </div>

  <div class="format_indent">

  <div>
    <h1 class="title">Flavors</h1>

    <form action="/flavors/" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="_method" value="PATCH"/>
      <p>Fliter By Price Per Scoop:</p>
      <input type="text" name="" value=""/><br/>
    <input class="button_margin" type='Submit'/><br/>



    <% @flavors.each do |flavor| %>
      <h2><a href="/flavors/<%= flavor.id %>"><%= flavor.flavor_name%></a></h2>
      <p>Dairy Free? <%= flavor.dairy?%></p>
      <p>Nut Free? <%= flavor.nuts?%></p>
      <p>Calories: <%= flavor.calories_per_scoop%></p>
      <p>Price Per Scoop: $<%= flavor.price_per_scoop_to_cents%></p>
      <p>Shop Id: <%= flavor.shop_id %></p>
      <p>Created At: <%= flavor.created_at %></p>
      <p>Updated At: <%= flavor.updated_at %></p>

      <button type="button" name="button" class="">
        <a href="/flavors/<%= flavor.id  %>/edit">Edit</a>
      </button>

      <form action="/flavors/<%= flavor.id %>" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete Flavor"/>
      </form>

    <% end %>
  </div>
</div>
